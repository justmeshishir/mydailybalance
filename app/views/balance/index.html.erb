<div class="modal-body">
    <div class="modal-body">
        <%= simple_form_for (@balance) do |f| %>
          <%= f.input :title %>
          <%= f.input :amount %>
          <%= f.input :date_of_birth, as: :date, start_year: Date.today.year,
                                      end_year: Date.today.year, discard_day: false,
                              order: [:day, :month, :year] %>
          <%= f.submit 'Submit' %>
        <% end %>
    </div>
</div>
<table class="table table-striped">
    <tr>
        <td><b>Date</b></td>
        <td><b>Title</b></td>
        <td><b>Amount</b></td>
        <td></td>
        <td></td>
    </tr>
    <% @balances.each do |balance| %>
    <tr>
        <td><%= balance.date %></td>
        <td><%= balance.title %></td>
        <td><%= balance.amount %></td>
        <td>Edit</td>
        <td>Delete</td>
    </tr>
    <% end %>
</table>

