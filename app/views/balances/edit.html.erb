<%= simple_form_for (@balance), method: :patch do |f| %>
          <%= f.input :title %>
          <%= f.input :amount %>
          <%= f.input :date, as: :date, start_year: Date.today.year,
                                      end_year: Date.today.year, discard_day: false,
                              order: [:day, :month, :year] %>
          <%= f.submit 'Update', class:'btn btn-success' %>
<% end %>